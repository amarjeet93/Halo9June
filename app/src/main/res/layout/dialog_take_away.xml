<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    tools:ignore="Overdraw">

    <LinearLayout
        android:paddingBottom="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:text="Great choice!"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/value_16"
            android:layout_gravity="center_horizontal"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Great choice! \n Your order will be ready for pickup in:"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/value_20"
            android:layout_marginEnd="@dimen/value_20"
            android:layout_marginTop="@dimen/value_16"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="15-20 min"
            android:textColor="@color/grey"
            android:id="@+id/tvTime"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_16"
            android:textSize="23sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Restaurant address:"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_16"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvRestaurantAddress"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_16"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDirection"
            android:text="@string/click_here_to_directions"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_16"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Done"
            android:id="@+id/tvDone"
            android:textColor="@color/white"
            android:background="@drawable/back_black"
            android:paddingStart="@dimen/value_60"
            android:paddingEnd="@dimen/value_60"
            android:paddingTop="@dimen/dp_05"
            android:paddingBottom="@dimen/dp_05"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_20"
            android:textSize="21sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>